{
  "name": "@chaqchase/next-middleware",
  "version": "1.0.0",
  "description": "A powerful, type-safe middleware system for Next.js with plugin architecture, route protection, caching, logging, and internationalization support",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chaqchase/next-middleware.git"
  },
  "bugs": {
    "url": "https://github.com/chaqchase/next-middleware/issues"
  },
  "homepage": "https://github.com/chaqchase/next-middleware",
  "author": {
    "name": "Mohamed Achaq",
    "email": "hi@chaqchase.com",
    "url": "https://chaqchase.com"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --clean",
    "dev": "tsup src/index.ts --dts --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "pnpm type-check && pnpm lint:check && pnpm format:check",
    "prepublishOnly": "pnpm validate && pnpm build",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish",
    "version": "changeset version"
  },
  "module": "dist/index.js",
  "main": "dist/index.cjs",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "next": "^14.2.3",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "next",
    "next.js",
    "nextjs",
    "middleware",
    "auth",
    "authentication",
    "authorization",
    "route-protection",
    "protected-routes",
    "next-middleware",
    "acl",
    "plugin",
    "caching",
    "logging",
    "i18n",
    "internationalization",
    "typescript",
    "type-safe"
  ]
}
